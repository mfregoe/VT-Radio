<div class="section-outer">
  <h4 class="textcenter">
    Stations Listings:
    <% if !request.fullpath.include?('fm') %>
      AM
    <% elsif request.fullpath.include?('fm') %>
      FM
    <% end %>
  </h4>
</div>
<!-- /.section-outer -->

<div class="section-inner" role="main">
  <div class="shortcode clearfix list-post circle-image">
  <% @radio_stations.each do |radio_station| %>
    <div class="post clearfix" itemscope itemtype="http://schema.org/RadioStation">
      <div class="post-image">
        <span itemprop="alternateName"><%= radio_station.frequency %></span>
      </div>
      <div class="post-station">
        <h1 class="post-title">
          <%= radio_station.call_letters %> - <span itemprop="name"><%= radio_station.name %></span>
        </h1>
        <p class="post-meta" itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
          <%= radio_station.band %> - <span itemprop="addressLocality"><%= radio_station.city %></span>, <span itemprop="addressRegion"><%= radio_station.state %></span>
        </p>
        <p>
          Phone: <span itemprop="telephone"><%= radio_station.phone %></span><br />
          Genres: <%= radio_station.genre %>
        </p>
      </div>
      <div class="post-social">
        <p class="post-meta">Share It:</p>
        <a href="http://twitter.com/home?status=<%= radio_station.call_letters %> - <%= radio_station.name %>" title="Click to share this on Twitter" target="_blank"><span class="social-link-item twitter"></span></a>
        <a href="https://www.facebook.com/sharer/sharer.php?u=http://localhost:3000/<%= request.fullpath %>" target="_blank" title="Click to share this on Facebook"><span class="social-link-item facebook"></span></a>
      </div>
    </div>
  <% end %>
  </div>
  <!-- /shortcode list_posts -->
</div>
<!-- /.section-inner -->