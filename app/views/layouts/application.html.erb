<!doctype html>
<html lang="en-US">
<head>
	<meta charset="UTF-8">
	<title>VT Radio</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<link rel='stylesheet' id='google-fonts-css' href='http://fonts.googleapis.com/css?family=Josefin+Sans&#038;subset=latin%2Clatin-ext&#038;ver=3.6.1' type='text/css' media='all'/>
  	<%= csrf_meta_tags %>
  	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no">
</head>
<body class="sidebar-none">
	<div id="headerwrap">
		<header id="header">
			<h1 id="site-logo"><a href="/" title="VT Radio">VT Radio</a></h1>
			<h2 id="site-description">Vermont's Open Radio Directory.</h2>
		</header>
		<!-- /#header -->
	</div>
	<!-- /#headerwrap -->

	<%= yield %>

	<div id="footerwrap">
		<footer id="footer" class="pagewidth clearfix">
			<p class="back-top">
				<a href="#header"><span class="back-top-arrow"></span></a>
			</p>
			<div class="footer-text clearfix">
				<div class="post-title">
					&copy; 2013 VT Radio
				</div>
				<div class="post-date">
					Powered by <a href="http://www.vab.org">The Vermont Assocition of Broadcasters</a>
				</div>
			</div>
			<!-- /footer-text -->
		</footer>
		<!-- /#footer -->
	</div>
	<!-- /#footerwrap -->
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBbycvccNMbjA95mFgB-yovb0Xg3m-pEP4&sensor=false"></script>
	<%= javascript_include_tag "application" %>
</body>
</html>
